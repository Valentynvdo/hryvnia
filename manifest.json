{
  "name": "TON Wallet App",
  "short_name": "TONApp",
  "description": "Додаток для підключення гаманця TON та управління криптовалютами",
  "icons": [
    {
      "src": "/images/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/images/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "start_url": "/index.html",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#0d47a1",
  "orientation": "portrait",
  "scope": "/",
  "permissions": [
    "tonconnect"
  ],
  "connect": {
    "redirect_uri": "/ton-wallet-connect",
    "manifest_url": "/manifest.json"
  },
  "iconUrl": "https://ton-connect-github.io/demo-dapp-with-react-ui/apple-touch-icon-png",
  "termsOfUseUrl": "https://ton-connect-github.io/demo-dapp-with-react-ui/terms-of-use.txt",
  "privacyPolicyUrl": "https://ton-connect.github.io/demo-dapp-with-react-ui/privacy-policy.txt"
}
